<?xml version="1.0" encoding="utf-8"?>
<venus-client xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:noNamespaceSchemaLocation="venus-client.xsd">
	<remotes>
		<remote name="helloRemote" loadbalance="1">
			<!-- 与远程连接的socket相关的配置 -->
			<factory>
				<!-- 支持多节点负责均衡的高可用配置，默认采用轮询  -->
				<property name="ipAddressList">${monitor.venus.bus.ipAddressList}</property>
				<!-- socket的sendBuffer缓冲区大小，单位:Kcd acd  -->
				<property name="sendBufferSize">${venus.socket.sendBufferSize:64}</property>
				<!-- socket的receiveBuffer缓冲区大小，单位:K -->
				<property name="receiveBufferSize">${venus.socket.receiveBufferSize:64}</property>
				<property name="soTimeout">5000</property>
			</factory>
			
			<!-- 与每个远程节点的连接池配置，与apache的commons-pool配置一致 -->
			<pool>
				<property name="maxActive">10</property>
				<property name="maxIdle">30</property>
				<property name="minIdle">10</property>
				<property name="minEvictableIdleTimeMillis">60000</property>
				<property name="timeBetweenEvictionRunsMillis">60000</property>
				<property name="testOnBorrow">true</property>
				<property name="testWhileIdle">true</property>
			</pool>
			
			<!-- 采用 Dummy方式 认证 -->
			<!--
			<authenticator class="com.meidusa.venus.client.authenticate.DummyAuthenticator">
				<property name="serializeType">0</property>
			</authenticator>
			-->
		</remote>
	</remotes>

	<!-- 服务接口列表 -->
	<services>
		<!-- 定义服务以及指定该服务提供方的远程相关配置 -->
		<!--
		属性说明:
		ipAddressList:地址列表，若不配则走注册中心，多个以;间隔，示例如ipAddressList="10.47.16.9:16800;10.47.16.10:16800"
		remote:直连remote远程配置，不建议使用，仅ipAddressList属性解析使用，其它保留不用
		timeout:超时时间，单位ms,默认3000ms，示例如,timeout="5000"
		loadbanlance:负载均衡策略，支持random/round，默认random,,示例如,loadbanlance="random"
		weight:权重，默认1，仅支持通过注册中心管理界面修改
		cluster:集群容错策略，支持failover/fastfail，默认fastfail即正常模式
		retries:重试次数，若配置则开启cluster=failover容错策略，示例如，retries="3"
		coreConnections:服务连接数，默认8，示例如，coreConnections="10"
		versionx:版本号，走注册中心若存在多版本时可指定，默认为0.0.0,示例如versionx="0.0.1"
		自定义路由策略、流控、降级：仅支持通过注册中心管理界面修改
		-->
		<!--
		<service type="com.chexiang.venus.demo.provider.HelloService" ipAddressList="10.47.16.9:16800"/>
		-->
		<!--
		<service type="com.chexiang.venus.demo.provider.HelloService" ipAddressList="10.47.17.135:16800" coreConnections="10" timeout="5000"/>
		-->
		<!--
		<service type="com.chexiang.venus.demo.provider.HelloService" retries="3"/>
		-->
		<!-- <service type="com.chexiang.venus.demo.provider.HelloService" ipAddressList="10.47.128.250:16800"/> -->
		<service type="com.chexiang.venus.demo.provider.HelloService" versionx="0.0.1" loadbanlance="random"/>
	</services>
</venus-client>