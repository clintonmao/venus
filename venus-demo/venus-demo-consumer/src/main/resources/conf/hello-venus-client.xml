<?xml version="1.0" encoding="utf-8"?>
<venus-client xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:noNamespaceSchemaLocation="venus-client.xsd">
	<!-- 服务接口列表 -->
	<services>
		<!-- 定义服务以及指定该服务提供方的远程相关配置 -->
		<!--
		属性说明:
		ipAddressList:地址列表，若不配则走注册中心，多个以;间隔，示例如ipAddressList="10.47.16.9:16800;10.47.16.10:16800"
		coreConnections:服务连接数，默认8，示例如，coreConnections="10"
		timeout:超时时间，单位ms,默认3000ms，示例如,timeout="5000"
		retries:重试次数，若配置则自动使用failover容错策略，示例如，retries="3"
		cluster:集群容错策略，支持failover/fastfail，默认fastfail即正常模式
		loadbalance:负载均衡策略，支持random/round，默认random,,loadbalance="random"
		-->
		<!--<service type="com.chexiang.venus.demo.provider.HelloService" ipAddressList="10.47.17.238:16800"/>-->
		<!--<service type="com.chexiang.venus.demo.provider.HelloService" ipAddressList="10.47.17.135:16800" coreConnections="10" timeout="5000"/>-->
		<!--<service type="com.chexiang.venus.demo.provider.HelloService" retries="3"/>-->
		<service type="com.chexiang.venus.demo.provider.HelloService" ipAddressList="10.47.16.7:6800">
			<!--方法级配置，方法级若配置则会覆盖服务级配置-->
			<method name="getHello" timeout="3000" retries="3"/>
		</service>
		<service type="com.chexiang.venus.demo.provider.EchoService"/>
	</services>
</venus-client>